<!--pages/src/index.wxml-->
<!--顶部内容-->
<view style='background-color:#44b549;'>
<view id='btn_search' class='currentSearch' style='float:left;width:{{searchWidth}};' catch:tap='onSearchClick'>搜索</view>
<image src='../../assets/testIcon.png' class='iconImg' style='margin-top:5px;margin-right:5px;' catch:tap='onBtn_meiriyijvClick'></image>
<image src='../../assets/testIconSel.png' class='iconImg' style='margin-top:5px;margin-right:5px;' catch:tap='onBtn_kouyudakaClick'></image>
</view>
<!--页面内容-->
<swiper
  indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}"
  interval="{{interval}}"
  duration="{{duration}}"
>
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150" />
    </swiper-item>
  </block>
</swiper>
<button bindtap="changeIndicatorDots">indicator-dots</button>
<button bindtap="changeAutoplay">autoplay</button>
<slider bindchange="intervalChange" show-value min="500" max="2000" />
interval
<slider bindchange="durationChange" show-value min="1000" max="10000" />
duration