/* pages/main/allTemplates.wxss */
.template-content-subitem{
  padding:0px 20rpx 20rpx 20rpx;
}
.template-content-subitem-img{
  max-width: 160rpx;
  max-height: 160rpx;
  float: right;
}
.template-content-subitem-name{
  color: #333;
  float: left;
  padding-left:20rpx;
  max-width: 520rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden
}

.template-content-subitem-des{
  font-size: 26rpx;
  color: #999999;
  float: left;
  padding-left:20rpx;
  padding-top: 6rpx;
  max-width: 520rpx;
  min-width: 520rpx;
  word-wrap:break-word;
  max-height: 110rpx;
  overflow: hidden;
  height: 70rpx;
}

.template-content-bottom-line{
  margin-left:20rpx;
  width:510rpx;
  border-bottom:1rpx solid #999;
  height:4rpx;
}

.template-ScrollViewStyle{
  white-space: nowrap;
  height: 280rpx;
}

.template-ScrollViewItem{
  display: inline-block;
  width: 420rpx;
  max-width: 420rpx;
  height: 280rpx;
  margin-left: 40rpx;
  color: #fff;
  border-radius: 10rpx;
}

.template-PictureListItem{
  width: 680rpx;
  max-width: 680rpx;
  height: 320rpx;
  color: #fff;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
.template-PictureContainer{
  padding-top:20rpx;
  color: #333;
  padding-left:20rpx;
  width: 695rpx;
}
.template-PictureTitle{
  float: left;
  width: 420rpx;
  overflow: hidden;
  text-align: left;
}
.template-PictureZan{
  float: right;
  width: 250rpx;
  overflow: hidden;
  text-align: right;
  margin-right: 20rpx;
}