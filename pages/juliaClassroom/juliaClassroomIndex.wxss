/* juliaClassroom/juliaClassroomIndex.wxss */
.searchBarContainer{
  background-color:#ededed;
}

.currentSearch{
  color:#999;
  height: 60rpx;
  line-height: 60rpx;
  margin:10rpx 10rpx 20rpx 10rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 30rpx;
}

.containerView{
  background-color: #fff;
}
.categroyScrollViewStyle{
  white-space: nowrap;
  height: 200rpx;
}

.categroyItem{
  /* display: inline-block;我用自己的方法屏蔽掉了这个限制 */
  float: left;
  width: 180rpx;
  height: 180rpx;
  margin-left: 40rpx;
  color: #fff;
  border-radius: 10rpx;
}

.categroyItem-end{
  margin-right: 30rpx;
}
/* 一下样式配合使用，可以实现在scrollview视图中的多行文本垂直居中 */
.categroyItem-sub{
  display: table;
  width: 180rpx;
  height: 180rpx;
}
.categroyItem-subtext{
  display: table-cell;
  vertical-align: middle;
  text-align: center;
  word-wrap: break-word;
  max-width: 180rpx;
  white-space:pre-wrap;
}
/*垂直居中样式结束*/

.content-title{
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx;
}

.content-more{
  color: #333;
  padding: 20rpx;
  float: right;
}

.space-line{
  height: 20rpx;
}

.wonderfulScrollViewStyle{
  white-space: nowrap;
  height: 280rpx;
}

.wonderfulItem{
  display: inline-block;
  width: 420rpx;
  max-width: 420rpx;
  height: 280rpx;
  margin-left: 40rpx;
  color: #fff;
  border-radius: 10rpx;
}

.content-subitem-des{
  font-size: 26rpx;
  float: left;
  padding-left:20rpx;
  padding-top: 6rpx;
  max-width: 500rpx;
  min-width: 500rpx;
  word-wrap:break-word; 
}
.gmldescription{
  color: #999999;
  overflow: hidden;
  height: 70rpx;
}
.gmltime{
  color: #333;
}

.leaderBoard-item{
  height: 40rpx;
  margin-left:40rpx;
  padding:10rpx 0rpx 10rpx 0rpx;
  font-size: 26rpx;
  text-align: left;
  color: #333;
}
.leaderBoade-item-name{
  float:left;
  width:390rpx;
  font-weight: bold;
}

.leaderBoade-item-star{
  float:left;
  width:220rpx;
  max-width:220rpx;
  overflow:hidden;
  color:#999;
}
.leaderBoade-item-top{
  float:left;
  width:100rpx; 
}